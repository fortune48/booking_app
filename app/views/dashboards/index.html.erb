
<div class="container">
<% if current_user %>
    <p>welcome <%= current_user.first_name %></p>
<% end %>

<table class="table table-striped table-bordered table-hover">
<h2>Future Appointments</h2>
  <thead class="table-dark">
    <tr>
      <th scope="col">Appointments</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @active_appointments.each do |appointment| %>
     <tr>
      <td><p>Fixed Date : <%= appointment.fixed_date %></p></td>
      <td><p>Description : <%= appointment.description %></p></td>
      <td><%= link_to "Show", appointment %>|<%= link_to "edit", edit_appointment_path(appointment) %>|<%= link_to "Destroy", appointment, data: { turbo_method: :delete, turbo_confirm: "Are you sure"} %>
    </tr>
  <% end %>
  
  </tbody>
</table><br><br>

<table class="table table-striped table-bordered table-hover">
<h2>Past Appointments</h2>
  <thead class="table-dark">
    <tr>
      <th scope="col">Appointments</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @inactive_appointments.each do |appointment| %>
     <tr>
      <td><p>Fixed Date : <%= appointment.fixed_date %></p></td>
      <td><p>Description : <%= appointment.description %></p></td>
      <td><%= link_to "Show", appointment_path(appointment) %>|<%= link_to "edit", edit_appointment_path(appointment) %>|<%= link_to "Destroy", appointment_path(appointment), data: { turbo_method: :delete, turbo_confirm: "Are you sure"} %>
    </tr>
  <% end %>
  
  </tbody>
</table>
<%= link_to "New appointment", new_appointment_path, class: "btn btn-secondary" %>
