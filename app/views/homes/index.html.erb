                <button type="button" data-bs-target="#fortune1" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#fortune1" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#fortune1" data-bs-slide-to="2"></button>
                <button type="button" data-bs-target="#fortune1" data-bs-slide-to="3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <%= image_tag "doctor2.jpg", class: "d-block", id: "carousel_image" %>
                    <div class="carousel-caption">
                        <h2 class="text-primary">Our Doctors</h2>
                        <p class="text-dark">Dr. Smith</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <%= image_tag "doctor3.jpg", class: "d-block", id: "carousel_image" %>
                    <div class="carousel-caption">
                        <h2 class="text-primary">Our Doctors</h2>
                        <p class="text-primary">Dr. Judith</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <%= image_tag "doctor4.jpg", class: "d-block", id: "carousel_image" %>
                    <div class="carousel-caption">
                        <h2 class="text-primary">Our Doctors</h2>
                        <p class="text-primary">Dr. Henry</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <%= image_tag "doctor5.jpg", class: "d-block", id: "carousel_image" %>
                    <div class="carousel-caption">
                        <h2 class="text-primary">Our Doctors</h2>
                        <p class="text-primary">Dr. Everlin</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#fortune1" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#fortune1" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>

<div id="footer" class="container-fluid">
