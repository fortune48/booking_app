
<div class="container">
<table class="table table-striped table-bordered table-hover">
<br>
<h2>Appointments</h2>
  <thead class="table-dark">
    <tr>
      <th scope="col">Users</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |a| %>
     <tr>
      <td><p>users : <%= a.users.pluck(:first_name, :last_name).flatten %></p></td>
      <td><p>Description : <%= a.description %></p></td>
      <td><p>Fixed Date : <%= a.fixed_date %></p></td>
      <td><%= link_to "Edit", edit_appointment_path(a), class: "btn btn-secondary" %>
      <%= link_to "Back", appointments_path, class: "btn btn-primary" %>
      <%= link_to "Destroy", a, data: { turbo_method: :delete, turbo_confirm: "Are you sure"}, class: "btn-danger" %>
    </tr>
  <% end %>
  
  </tbody>
</table><br>
